<?xml version="1.0" encoding="utf-8"?>
<!--
    NeuroNet Expanded Notification - Neurodivergent-Friendly Design
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Top accent bar -->
    <View
        android:id="@+id/priority_indicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="16dp"
        android:background="?android:attr/colorPrimary"
        tools:background="#6750A4" />

    <!-- Content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <!-- Header: Avatar + Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_launcher_foreground"
                    android:alpha="0.3" />

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="@string/notification_icon_description"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <!-- Info cluster -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/notification_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Alex Chen" />

                    <TextView
                        android:id="@+id/notification_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        tools:text="MESSAGE" />

                </LinearLayout>

                <TextView
                    android:id="@+id/notification_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Notification.Time"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    tools:text="2 minutes ago" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.2"
            android:background="?android:attr/textColorPrimary" />

        <!-- Message content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/quote_bar"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="?android:attr/colorPrimary"
                tools:background="#6750A4" />

            <TextView
                android:id="@+id/notification_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="6"
                android:ellipsize="end"
                tools:text="Hey! Just wanted to check in and see how you're doing today." />

        </LinearLayout>

        <!-- Quick reactions -->
        <LinearLayout
            android:id="@+id/quick_reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/reaction_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/emoji_thumbs_up"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_action_dismiss" />

            <TextView
                android:id="@+id/reaction_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/emoji_heart"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_action_dismiss" />

            <TextView
                android:id="@+id/reaction_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/emoji_smile"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_action_dismiss" />

            <TextView
                android:id="@+id/reaction_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/emoji_hands"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_action_dismiss" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/reaction_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/emoji_more"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_action_reply" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:id="@+id/notification_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/action_reply"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="80dp"
                android:paddingHorizontal="16dp"
                android:text="@string/notification_action_reply"
                android:textSize="13sp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/action_mark_read"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="80dp"
                android:paddingHorizontal="16dp"
                android:text="@string/notification_action_mark_read"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
