<?xml version="1.0" encoding="utf-8"?>
<!--
    NeuroNet Collapsed Notification - Neurodivergent-Friendly Design

    Unique features:
    - Calming visual flow with accent indicator
    - Clear hierarchy with generous spacing
    - Soft rounded elements for visual comfort
    - Accessibility-optimized touch targets
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <!-- Left accent bar - visual type indicator -->
    <View
        android:id="@+id/type_indicator"
        android:layout_width="4dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:background="?android:attr/colorPrimary"
        tools:background="#6750A4" />

    <!-- Avatar with subtle ring -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <!-- Outer glow ring -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/ic_launcher_foreground" />

        <!-- Avatar image -->
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/notification_icon_description"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <!-- Text content cluster -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Title row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Alex Chen" />

            <!-- Timestamp badge -->
            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="11sp"
                android:alpha="0.6"
                tools:text="2m" />

        </LinearLayout>

        <!-- Content preview -->
        <TextView
            android:id="@+id/notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@android:style/TextAppearance.Material.Notification"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Hey! Just wanted to check in..." />

    </LinearLayout>

    <!-- Quick action indicator -->
    <ImageView
        android:id="@+id/quick_action_hint"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_menu_more"
        android:alpha="0.4"
        android:contentDescription="@string/notification_action_view" />

</LinearLayout>
